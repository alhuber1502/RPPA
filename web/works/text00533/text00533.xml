   <note type="source" xml:id="erar-n00780">
      <date type="comp" when="1840">
         <w xml:id="erar-3221690">1840</w>
      </date>
   </note>
   <head type="main" xml:id="erar-h01495">
      <w xml:id="erar-3220860">Есть</w>
      <c> </c>
      <w xml:id="erar-3220870">речи</w>
      <c> </c>
      <pc xml:id="erar-3220880">–</pc>
      <c> </c>
      <w xml:id="erar-3220890">значенье</w>
      <c> </c>
      <pc xml:id="erar-3220900" unit="sentence">...</pc>
   </head>
   <lg xml:id="erar-s41345">
      <l xml:id="erar-l35225">
         <w xml:id="erar-3220930">Есть</w>
         <c> </c>
         <w xml:id="erar-3220940">речи</w>
         <c> </c>
         <pc xml:id="erar-3220950">–</pc>
         <c> </c>
         <w xml:id="erar-3220960">значенье</w>
      </l>
      <l xml:id="erar-l35230">
         <c> </c>
         <w xml:id="erar-3220970">Темно</w>
         <c> </c>
         <w xml:id="erar-3220980">иль</w>
         <c> </c>
         <w xml:id="erar-3220990">ничтожно</w>
         <pc xml:id="erar-3221000">,</pc>
      </l>
      <l xml:id="erar-l35235">
         <c> </c>
         <w xml:id="erar-3221010">Но им</w>
         <c> </c>
         <w xml:id="erar-3221020">без</w>
         <c> </c>
         <w xml:id="erar-3221030">волненья</w>
      </l>
      <l xml:id="erar-l35240">
         <c> </c>
         <w xml:id="erar-3221040">Внимать</w>
         <c> </c>
         <w xml:id="erar-3221050">невозможно</w>
         <pc xml:id="erar-3221060" unit="sentence">.</pc>
         <c> </c>
      </l>
   </lg>
   <lg xml:id="erar-s41350">
      <l xml:id="erar-l35245">
         <w xml:id="erar-3221080">Как</w>
         <c> </c>
         <w xml:id="erar-3221090">полны</w>
         <c> </c>
         <w xml:id="erar-3221100">их</w>
         <c> </c>
         <w xml:id="erar-3221110">звуки</w>
      </l>
      <l xml:id="erar-l35250">
         <c> </c>
         <w xml:id="erar-3221120">Безумством желанья</w>
         <pc xml:id="erar-3221130" unit="sentence">!</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35255">
         <w xml:id="erar-3221140">В</w>
         <c> </c>
         <w xml:id="erar-3221150">них</w>
         <c> </c>
         <w xml:id="erar-3221160">слезы</w>
         <c> </c>
         <w xml:id="erar-3221170">разлуки</w>
         <pc xml:id="erar-3221180">,</pc>
      </l>
      <l xml:id="erar-l35260">
         <c> </c>
         <w xml:id="erar-3221190">В</w>
         <c> </c>
         <w xml:id="erar-3221200">них</w>
         <c> </c>
         <w xml:id="erar-3221210">трепет свиданья</w>
         <pc xml:id="erar-3221220" unit="sentence">.</pc>
         <c> </c>
      </l>
   </lg>
   <lg xml:id="erar-s41355">
      <l xml:id="erar-l35265">
         <w xml:id="erar-3221240">Не встретит ответа</w>
      </l>
      <l xml:id="erar-l35270">
         <c> </c>
         <w xml:id="erar-3221250">Средь</w>
         <c> </c>
         <w xml:id="erar-3221260">шума</w>
         <c> </c>
         <w xml:id="erar-3221270">мирского</w>
      </l>
      <l xml:id="erar-l35275">
         <c> </c>
         <w xml:id="erar-3221280">Из</w>
         <c> </c>
         <w xml:id="erar-3221290">пламя</w>
         <c> </c>
         <w xml:id="erar-3221300">и</w>
         <c> </c>
         <w xml:id="erar-3221310">света</w>
      </l>
      <l xml:id="erar-l35280">
         <c> </c>
         <w xml:id="erar-3221320">Рожденное слово</w>
         <pc xml:id="erar-3221330">;</pc>
      </l>
   </lg>
   <lg xml:id="erar-s41360">
      <l xml:id="erar-l35285">
         <w xml:id="erar-3221350">Но в</w>
         <c> </c>
         <w xml:id="erar-3221360">храме</w>
         <pc xml:id="erar-3221370">,</pc>
         <c> </c>
         <w xml:id="erar-3221380">средь</w>
         <c> </c>
         <w xml:id="erar-3221390">боя</w>
      </l>
      <l xml:id="erar-l35290">
         <c> </c>
         <w xml:id="erar-3221400">И</w>
         <c> </c>
         <w xml:id="erar-3221410">где</w>
         <c> </c>
         <w xml:id="erar-3221420">я</w>
         <c> </c>
         <w xml:id="erar-3221430">ни</w>
         <c> </c>
         <w xml:id="erar-3221440">буду</w>
         <pc xml:id="erar-3221450">,</pc>
      </l>
      <l xml:id="erar-l35295">
         <c> </c>
         <w xml:id="erar-3221460">Услышав его</w>
         <pc xml:id="erar-3221470">,</pc>
         <c> </c>
         <w xml:id="erar-3221480">я</w>
      </l>
      <l xml:id="erar-l35300">
         <c> </c>
         <w xml:id="erar-3221490">Узнаю повсюду</w>
         <pc xml:id="erar-3221500" unit="sentence">.</pc>
         <c> </c>
      </l>
   </lg>
   <lg xml:id="erar-s41365">
      <l xml:id="erar-l35305">
         <w xml:id="erar-3221520">Не кончив</w>
         <c> </c>
         <w xml:id="erar-3221530">молитвы</w>
         <pc xml:id="erar-3221540">,</pc>
      </l>
      <l xml:id="erar-l35310">
         <c> </c>
         <w xml:id="erar-3221550">На звук тот</w>
         <c> </c>
         <w xml:id="erar-3221560">отвечу</w>
         <pc xml:id="erar-3221570">,</pc>
      </l>
      <l xml:id="erar-l35315">
         <c> </c>
         <w xml:id="erar-3221580">И</w>
         <c> </c>
         <w xml:id="erar-3221590">брошусь</w>
         <c> </c>
         <w xml:id="erar-3221600">из</w>
         <c> </c>
         <w xml:id="erar-3221610">битвы</w>
      </l>
      <l xml:id="erar-l35320">
         <c> </c>
         <w xml:id="erar-3221620">Ему</w>
         <c> </c>
         <w xml:id="erar-3221630">я</w>
         <c> </c>
         <w xml:id="erar-3221640">навстречу</w>
         <pc xml:id="erar-3221650" unit="sentence">.</pc>
         <c> </c>
      </l>
   </lg>
</div>
