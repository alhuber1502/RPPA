   <link target="#pers00238" type="author"/>
   <link target="#nott" type="nott"/>
   <note type="source" xml:id="erar-n00790">
      <date type="comp" when="1830">
         <w xml:id="erar-3224190">1830</w>
      </date>
   </note>
   <head type="main" xml:id="erar-h01505">
      <w xml:id="erar-3223180">Silentium</w>
      <pc xml:id="erar-3223190" unit="sentence">!</pc>
   </head>
   <lg xml:id="erar-s41420">
      <l xml:id="erar-l35425">
         <w xml:id="erar-3223220">Молчи</w>
         <pc xml:id="erar-3223230">,</pc>
         <c> </c>
         <w xml:id="erar-3223240">скрывайся</w>
         <c> </c>
         <w xml:id="erar-3223250">и</w>
         <c> </c>
         <w xml:id="erar-3223260">таи</w>
      </l>
      <l xml:id="erar-l35430">
         <c> </c>
         <w xml:id="erar-3223270">И</w>
         <c> </c>
         <w xml:id="erar-3223280">чувства</w>
         <c> </c>
         <w xml:id="erar-3223290">и</w>
         <c> </c>
         <w xml:id="erar-3223300">мечты</w>
         <c> </c>
         <w xml:id="erar-3223310">свои </w>
         <c> </c>
         <pc xml:id="erar-3223320">–</pc>
      </l>
      <l xml:id="erar-l35435">
         <c> </c>
         <w xml:id="erar-3223330">Пускай</w>
         <c> </c>
         <w xml:id="erar-3223340">в</w>
         <c> </c>
         <w xml:id="erar-3223350">душевной глубине</w>
      </l>
      <l xml:id="erar-l35440">
         <c> </c>
         <w xml:id="erar-3223360">Встают</w>
         <c> </c>
         <w xml:id="erar-3223370">и</w>
         <c> </c>
         <w xml:id="erar-3223380">заходят</w>
         <c> </c>
         <w xml:id="erar-3223390">оне</w>
      </l>
      <l xml:id="erar-l35445">
         <c> </c>
         <w xml:id="erar-3223400">Безмолвно</w>
         <pc xml:id="erar-3223410">,</pc>
         <c> </c>
         <w xml:id="erar-3223420">как</w>
         <c> </c>
         <w xml:id="erar-3223430">звезды</w>
         <c> </c>
         <w xml:id="erar-3223440">в</w>
         <c> </c>
         <w xml:id="erar-3223450">ночи</w>
         <pc xml:id="erar-3223460">,</pc>
         <c> </c>
         <pc xml:id="erar-3223470">–</pc>
      </l>
      <l xml:id="erar-l35450">
         <c> </c>
         <w xml:id="erar-3223480">Любуйся</w>
         <c> </c>
         <w xml:id="erar-3223490">ими</w>
         <c> </c>
         <pc xml:id="erar-3223500">–</pc>
         <c> </c>
         <w xml:id="erar-3223510">и</w>
         <c> </c>
         <w xml:id="erar-3223520">молчи</w>
         <pc xml:id="erar-3223530" unit="sentence">.</pc>
         <c> </c>
      </l>
   </lg>
   <lg xml:id="erar-s41425">
      <l xml:id="erar-l35455">
         <w xml:id="erar-3223550">Как</w>
         <c> </c>
         <w xml:id="erar-3223560">сердцу высказать</w>
         <c> </c>
         <w xml:id="erar-3223570">себя</w>
         <pc xml:id="erar-3223580" unit="sentence">?</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35460">
         <w xml:id="erar-3223590">Другому как</w>
         <c> </c>
         <w xml:id="erar-3223600">понять</w>
         <c> </c>
         <w xml:id="erar-3223610">тебя</w>
         <pc xml:id="erar-3223620" unit="sentence">?</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35465">
         <w xml:id="erar-3223630">Поймет ли</w>
         <c> </c>
         <w xml:id="erar-3223640">он</w>
         <pc xml:id="erar-3223650">,</pc>
         <c> </c>
         <w xml:id="erar-3223660">чем</w>
         <c> </c>
         <w xml:id="erar-3223670">ты</w>
         <c> </c>
         <w xml:id="erar-3223680">живешь</w>
         <pc xml:id="erar-3223690" unit="sentence">?</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35470">
         <w xml:id="erar-3223700">Мысль</w>
         <c> </c>
         <w xml:id="erar-3223710">изреченная</w>
         <c> </c>
         <w xml:id="erar-3223720">есть</w>
         <c> </c>
         <w xml:id="erar-3223730">ложь</w>
         <c> </c>
         <pc xml:id="erar-3223740">–</pc>
      </l>
      <l xml:id="erar-l35475">
         <c> </c>
         <w xml:id="erar-3223750">Взрывая</w>
         <pc xml:id="erar-3223760">,</pc>
         <c> </c>
         <w xml:id="erar-3223770">возмутишь</w>
         <c> </c>
         <w xml:id="erar-3223780">ключи</w>
         <pc xml:id="erar-3223790">,</pc>
      </l>
      <l xml:id="erar-l35480">
         <c> </c>
         <w xml:id="erar-3223800">Питайся</w>
         <c> </c>
         <w xml:id="erar-3223810">ими</w>
         <c> </c>
         <pc xml:id="erar-3223820">–</pc>
         <c> </c>
         <w xml:id="erar-3223830">и</w>
         <c> </c>
         <w xml:id="erar-3223840">молчи</w>
         <pc xml:id="erar-3223850" unit="sentence">.</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35485">
         <w xml:id="erar-3223860">Лишь</w>
         <c> </c>
         <w xml:id="erar-3223870">жить</w>
         <c> </c>
         <w xml:id="erar-3223880">в</w>
         <c> </c>
         <w xml:id="erar-3223890">себе самом</w>
         <c> </c>
         <w xml:id="erar-3223900">умей</w>
         <c> </c>
         <pc xml:id="erar-3223910">–</pc>
      </l>
      <l xml:id="erar-l35490">
         <c> </c>
         <w xml:id="erar-3223920">Есть</w>
         <c> </c>
         <w xml:id="erar-3223930">целый</w>
         <c> </c>
         <w xml:id="erar-3223940">мир</w>
         <c> </c>
         <w xml:id="erar-3223950">в</w>
         <c> </c>
         <w xml:id="erar-3223960">душе твоей</w>
      </l>
      <l xml:id="erar-l35495">
         <c> </c>
         <w xml:id="erar-3223970">Таинственно-волшебных</w>
         <c> </c>
         <w xml:id="erar-3223980">дум</w>
         <c> </c>
         <pc xml:id="erar-3223990">–</pc>
      </l>
      <l xml:id="erar-l35500">
         <c> </c>
         <w xml:id="erar-3224000">Их</w>
         <c> </c>
         <w xml:id="erar-3224010">оглушит</w>
         <c> </c>
         <w xml:id="erar-3224020">наружный</w>
         <c> </c>
         <w xml:id="erar-3224030">шум</w>
         <pc xml:id="erar-3224040">,</pc>
      </l>
      <l xml:id="erar-l35505">
         <c> </c>
         <w xml:id="erar-3224050">Дневные</w>
         <c> </c>
         <w xml:id="erar-3224060">разгонят</w>
         <c> </c>
         <w xml:id="erar-3224070">лучи</w>
         <c> </c>
         <pc xml:id="erar-3224080">–</pc>
      </l>
      <l xml:id="erar-l35510">
         <c> </c>
         <w xml:id="erar-3224090">Внимай их</w>
         <c> </c>
         <w xml:id="erar-3224100">пенью</w>
         <c> </c>
         <pc xml:id="erar-3224110">–</pc>
         <c> </c>
         <w xml:id="erar-3224120">и</w>
         <c> </c>
         <w xml:id="erar-3224130">молчи</w>
         <pc xml:id="erar-3224140">!</pc>
         <c> </c>
         <pc xml:id="erar-3224150" unit="sentence">...</pc>
         <c> </c>
      </l>
   </lg>
</div>
