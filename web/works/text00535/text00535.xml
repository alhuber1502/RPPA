   <note type="source" xml:id="erar-n00790">
      <date type="comp" when="1830">
         <w xml:id="erar-3808590">1830</w>
      </date>
   </note>
   <head type="main" xml:id="erar-h01515">
      <w xml:id="erar-3807500">Silentium</w>
      <pc xml:id="erar-3807510" unit="sentence">!</pc>
   </head>
   <lg xml:id="erar-s41415">
      <l xml:id="erar-l35425">
         <w xml:id="erar-3807540">Молчи</w>
         <pc xml:id="erar-3807550">,</pc>
         <c> </c>
         <w xml:id="erar-3807560">скрывайся</w>
         <c> </c>
         <w xml:id="erar-3807570">и</w>
         <c> </c>
         <w xml:id="erar-3807580">таи</w>
      </l>
      <l xml:id="erar-l35430">
         <c> </c>
         <w xml:id="erar-3807590">И</w>
         <c> </c>
         <w xml:id="erar-3807600">чувства</w>
         <c> </c>
         <w xml:id="erar-3807610">и</w>
         <c> </c>
         <w xml:id="erar-3807620">мечты</w>
         <c> </c>
         <w xml:id="erar-3807630">свои</w>
         <c> </c>
         <pc xml:id="erar-3807640">–</pc>
      </l>
      <l xml:id="erar-l35435">
         <c> </c>
         <w xml:id="erar-3807650">Пускай</w>
         <c> </c>
         <w xml:id="erar-3807660">в</w>
         <c> </c>
         <w xml:id="erar-3807670">душевной</w>
         <c> </c>
         <w xml:id="erar-3807680">глубине</w>
      </l>
      <l xml:id="erar-l35440">
         <c> </c>
         <w xml:id="erar-3807690">Встают</w>
         <c> </c>
         <w xml:id="erar-3807700">и</w>
         <c> </c>
         <w xml:id="erar-3807710">заходят</w>
         <c> </c>
         <w xml:id="erar-3807720">оне</w>
      </l>
      <l xml:id="erar-l35445">
         <c> </c>
         <w xml:id="erar-3807730">Безмолвно</w>
         <pc xml:id="erar-3807740">,</pc>
         <c> </c>
         <w xml:id="erar-3807750">как</w>
         <c> </c>
         <w xml:id="erar-3807760">звезды</w>
         <c> </c>
         <w xml:id="erar-3807770">в</w>
         <c> </c>
         <w xml:id="erar-3807780">ночи</w>
         <pc xml:id="erar-3807790">,</pc>
         <c> </c>
         <pc xml:id="erar-3807800">–</pc>
      </l>
      <l xml:id="erar-l35450">
         <c> </c>
         <w xml:id="erar-3807810">Любуйся</w>
         <c> </c>
         <w xml:id="erar-3807820">ими</w>
         <c> </c>
         <pc xml:id="erar-3807830">–</pc>
         <c> </c>
         <w xml:id="erar-3807840">и</w>
         <c> </c>
         <w xml:id="erar-3807850">молчи</w>
         <pc xml:id="erar-3807860" unit="sentence">.</pc>
         <c> </c>
      </l>
   </lg>
   <lg xml:id="erar-s41420">
      <l xml:id="erar-l35455">
         <w xml:id="erar-3807890">Как</w>
         <c> </c>
         <w xml:id="erar-3807900">сердцу</w>
         <c> </c>
         <w xml:id="erar-3807910">высказать</w>
         <c> </c>
         <w xml:id="erar-3807920">себя</w>
         <pc xml:id="erar-3807930" unit="sentence">?</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35460">
         <w xml:id="erar-3807940">Другому</w>
         <c> </c>
         <w xml:id="erar-3807950">как</w>
         <c> </c>
         <w xml:id="erar-3807960">понять</w>
         <c> </c>
         <w xml:id="erar-3807970">тебя</w>
         <pc xml:id="erar-3807980" unit="sentence">?</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35465">
         <w xml:id="erar-3807990">Поймет</w>
         <c> </c>
         <w xml:id="erar-3808000">ли</w>
         <c> </c>
         <w xml:id="erar-3808010">он</w>
         <pc xml:id="erar-3808020">,</pc>
         <c> </c>
         <w xml:id="erar-3808030">чем</w>
         <c> </c>
         <w xml:id="erar-3808040">ты</w>
         <c> </c>
         <w xml:id="erar-3808050">живешь</w>
         <pc xml:id="erar-3808060" unit="sentence">?</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35470">
         <w xml:id="erar-3808070">Мысль</w>
         <c> </c>
         <w xml:id="erar-3808080">изреченная</w>
         <c> </c>
         <w xml:id="erar-3808090">есть</w>
         <c> </c>
         <w xml:id="erar-3808100">ложь</w>
         <c> </c>
         <pc xml:id="erar-3808110">–</pc>
      </l>
      <l xml:id="erar-l35475">
         <c> </c>
         <w xml:id="erar-3808120">Взрывая</w>
         <pc xml:id="erar-3808130">,</pc>
         <c> </c>
         <w xml:id="erar-3808140">возмутишь</w>
         <c> </c>
         <w xml:id="erar-3808150">ключи</w>
         <pc xml:id="erar-3808160">,</pc>
      </l>
      <l xml:id="erar-l35480">
         <c> </c>
         <w xml:id="erar-3808170">Питайся</w>
         <c> </c>
         <w xml:id="erar-3808180">ими</w>
         <c> </c>
         <pc xml:id="erar-3808190">–</pc>
         <c> </c>
         <w xml:id="erar-3808200">и</w>
         <c> </c>
         <w xml:id="erar-3808210">молчи</w>
         <pc xml:id="erar-3808220" unit="sentence">.</pc>
         <c> </c>
      </l>
      <l xml:id="erar-l35485">
         <w xml:id="erar-3808230">Лишь</w>
         <c> </c>
         <w xml:id="erar-3808240">жить</w>
         <c> </c>
         <w xml:id="erar-3808250">в</w>
         <c> </c>
         <w xml:id="erar-3808260">себе</w>
         <c> </c>
         <w xml:id="erar-3808270">самом</w>
         <c> </c>
         <w xml:id="erar-3808280">умей</w>
         <c> </c>
         <pc xml:id="erar-3808290">–</pc>
      </l>
      <l xml:id="erar-l35490">
         <c> </c>
         <w xml:id="erar-3808300">Есть</w>
         <c> </c>
         <w xml:id="erar-3808310">целый</w>
         <c> </c>
         <w xml:id="erar-3808320">мир</w>
         <c> </c>
         <w xml:id="erar-3808330">в</w>
         <c> </c>
         <w xml:id="erar-3808340">душе</w>
         <c> </c>
         <w xml:id="erar-3808350">твоей</w>
      </l>
      <l xml:id="erar-l35495">
         <c> </c>
         <w xml:id="erar-3808360">Таинственно-волшебных</w>
         <c> </c>
         <w xml:id="erar-3808370">дум</w>
         <c> </c>
         <pc xml:id="erar-3808380">–</pc>
      </l>
      <l xml:id="erar-l35500">
         <c> </c>
         <w xml:id="erar-3808390">Их</w>
         <c> </c>
         <w xml:id="erar-3808400">оглушит</w>
         <c> </c>
         <w xml:id="erar-3808410">наружный</w>
         <c> </c>
         <w xml:id="erar-3808420">шум</w>
         <pc xml:id="erar-3808430">,</pc>
      </l>
      <l xml:id="erar-l35505">
         <c> </c>
         <w xml:id="erar-3808440">Дневные</w>
         <c> </c>
         <w xml:id="erar-3808450">разгонят</w>
         <c> </c>
         <w xml:id="erar-3808460">лучи</w>
         <c> </c>
         <pc xml:id="erar-3808470">–</pc>
      </l>
      <l xml:id="erar-l35510">
         <c> </c>
         <w xml:id="erar-3808480">Внимай</w>
         <c> </c>
         <w xml:id="erar-3808490">их</w>
         <c> </c>
         <w xml:id="erar-3808500">пенью</w>
         <c> </c>
         <pc xml:id="erar-3808510">–</pc>
         <c> </c>
         <w xml:id="erar-3808520">и</w>
         <c> </c>
         <w xml:id="erar-3808530">молчи</w>
         <pc xml:id="erar-3808540">!</pc>
         <c> </c>
         <pc xml:id="erar-3808550" unit="sentence">...</pc>
         <c> </c>
      </l>
   </lg>
</div>
