   <link target="#pers00520" type="author"/>
   <link target="#nott" type="nott"/>
   <note type="source" xml:id="rocp-n00430">
      <date type="comp" when="1829">
         <w xml:id="rocp-434890">1829</w>
      </date>
   </note>
   <head type="main" xml:lang="rus" xml:id="rocp-h00825">
      <w xml:id="rocp-433850">Ответ</w>
      <c> </c>
      <w xml:id="rocp-433860">А</w>
      <pc xml:id="rocp-433870" unit="sentence">.</pc>
      <c> </c>
      <w xml:id="rocp-433880">С</w>
      <pc xml:id="rocp-433890">.</pc>
      <c> </c>
      <w xml:id="rocp-433900">Пушкину</w>
   </head>
   <lg xml:id="rocp-s05695">
      <l xml:id="rocp-l11735">
         <w xml:id="rocp-433930">Струн</w>
         <c> </c>
         <w xml:id="rocp-433940">вещих</w>
         <c> </c>
         <w xml:id="rocp-433950">пламенные</w>
         <c> </c>
         <w xml:id="rocp-433960">звуки</w>
      </l>
      <l xml:id="rocp-l11740">
         <w xml:id="rocp-433970">До</w>
         <c> </c>
         <w xml:id="rocp-433980">слуха</w>
         <c> </c>
         <w xml:id="rocp-433990">нашего</w>
         <c> </c>
         <w xml:id="rocp-434000">дошли</w>
         <pc xml:id="rocp-434010">,</pc>
      </l>
      <l xml:id="rocp-l11745">
         <w xml:id="rocp-434020">К</w>
         <c> </c>
         <w xml:id="rocp-434030">мечам</w>
         <c> </c>
         <w xml:id="rocp-434040">рванулись</w>
         <c> </c>
         <w xml:id="rocp-434050">наши</w>
         <c> </c>
         <w xml:id="rocp-434060">руки</w>
         <pc xml:id="rocp-434070">,</pc>
      </l>
      <l xml:id="rocp-l11750">
         <w xml:id="rocp-434080">И</w>
         <c> </c>
         <pc xml:id="rocp-434090">—</pc>
         <c> </c>
         <w xml:id="rocp-434100">лишь</w>
         <c> </c>
         <w xml:id="rocp-434110">оковы</w>
         <c> </c>
         <w xml:id="rocp-434120">обрели</w>
         <pc xml:id="rocp-434130" unit="sentence">.</pc>
      </l>
   </lg>
   <lg xml:id="rocp-s05700">
      <l xml:id="rocp-l11755">
         <w xml:id="rocp-434160">Но</w>
         <c> </c>
         <w xml:id="rocp-434170">будь</w>
         <c> </c>
         <w xml:id="rocp-434180">покоен</w>
         <pc xml:id="rocp-434190">,</pc>
         <c> </c>
         <w xml:id="rocp-434200">бард</w>
         <pc xml:id="rocp-434210">!</pc>
         <c> </c>
         <pc xml:id="rocp-434220">—</pc>
         <c> </c>
         <w xml:id="rocp-434230">цепями</w>
         <pc xml:id="rocp-434240">,</pc>
      </l>
      <l xml:id="rocp-l11760">
         <w xml:id="rocp-434250">Своей</w>
         <c> </c>
         <w xml:id="rocp-434260">судьбой</w>
         <c> </c>
         <w xml:id="rocp-434270">гордимся</w>
         <c> </c>
         <w xml:id="rocp-434280">мы</w>
         <pc xml:id="rocp-434290">,</pc>
      </l>
      <l xml:id="rocp-l11765">
         <w xml:id="rocp-434300">И</w>
         <c> </c>
         <w xml:id="rocp-434310">за</w>
         <c> </c>
         <w xml:id="rocp-434320">затворами</w>
         <c> </c>
         <w xml:id="rocp-434330">тюрьмы</w>
      </l>
      <l xml:id="rocp-l11770">
         <w xml:id="rocp-434340">В</w>
         <c> </c>
         <w xml:id="rocp-434350">душе</w>
         <c> </c>
         <w xml:id="rocp-434360">смеемся</w>
         <c> </c>
         <w xml:id="rocp-434370">над</w>
         <c> </c>
         <w xml:id="rocp-434380">царями</w>
         <pc xml:id="rocp-434390" unit="sentence">.</pc>
      </l>
   </lg>
   <lg xml:id="rocp-s05705">
      <l xml:id="rocp-l11775">
         <w xml:id="rocp-434420">Наш</w>
         <c> </c>
         <w xml:id="rocp-434430">скорбный</w>
         <c> </c>
         <w xml:id="rocp-434440">труд</w>
         <c> </c>
         <w xml:id="rocp-434450">не</w>
         <c> </c>
         <w xml:id="rocp-434460">пропадет</w>
         <pc xml:id="rocp-434470">,</pc>
      </l>
      <l xml:id="rocp-l11780">
         <w xml:id="rocp-434480">10</w>
         <c> </c>
         <w xml:id="rocp-434490">Из</w>
         <c> </c>
         <w xml:id="rocp-434500">искры</w>
         <c> </c>
         <w xml:id="rocp-434510">возгорится</w>
         <c> </c>
         <w xml:id="rocp-434520">пламя</w>
         <pc xml:id="rocp-434530">,</pc>
      </l>
      <l xml:id="rocp-l11785">
         <w xml:id="rocp-434540">И</w>
         <c> </c>
         <w xml:id="rocp-434550">просвещенный</w>
         <c> </c>
         <w xml:id="rocp-434560">наш</w>
         <c> </c>
         <w xml:id="rocp-434570">народ</w>
      </l>
      <l xml:id="rocp-l11790">
         <w xml:id="rocp-434580">Сберется</w>
         <c> </c>
         <w xml:id="rocp-434590">под</w>
         <c> </c>
         <w xml:id="rocp-434600">святое</w>
         <c> </c>
         <w xml:id="rocp-434610">знамя</w>
         <pc xml:id="rocp-434620" unit="sentence">.</pc>
      </l>
   </lg>
   <lg xml:id="rocp-s05710">
      <l xml:id="rocp-l11795">
         <w xml:id="rocp-434650">Мечи</w>
         <c> </c>
         <w xml:id="rocp-434660">скуем</w>
         <c> </c>
         <w xml:id="rocp-434670">мы</w>
         <c> </c>
         <w xml:id="rocp-434680">из</w>
         <c> </c>
         <w xml:id="rocp-434690">цепей</w>
      </l>
      <l xml:id="rocp-l11800">
         <w xml:id="rocp-434700">И</w>
         <c> </c>
         <w xml:id="rocp-434710">пламя</w>
         <c> </c>
         <w xml:id="rocp-434720">вновь</w>
         <c> </c>
         <w xml:id="rocp-434730">зажжем</w>
         <c> </c>
         <w xml:id="rocp-434740">свободы</w>
         <pc xml:id="rocp-434750" unit="sentence">!</pc>
      </l>
      <l xml:id="rocp-l11805">
         <w xml:id="rocp-434760">Она</w>
         <c> </c>
         <w xml:id="rocp-434770">нагрянет</w>
         <c> </c>
         <w xml:id="rocp-434780">на</w>
         <c> </c>
         <w xml:id="rocp-434790">царей</w>
         <pc xml:id="rocp-434800">,</pc>
      </l>
      <l xml:id="rocp-l11810">
         <w xml:id="rocp-434810">И</w>
         <c> </c>
         <w xml:id="rocp-434820">радостно</w>
         <c> </c>
         <w xml:id="rocp-434830">вздохнут</w>
         <c> </c>
         <w xml:id="rocp-434840">народы</w>
         <pc xml:id="rocp-434850" unit="sentence">!</pc>
      </l>
   </lg>
</div>
