         <c> </c>
         <pc xml:id="erpa-1273660">—</pc>
         <c> </c>
         <w xml:id="erpa-1273670">июнь</w>
         <c> </c>
         <w xml:id="erpa-1273680">1819</w>
      </date>
   </note>
   <head type="main" xml:lang="rus" xml:id="erpa-h01910">
      <w xml:id="erpa-1273050">Ты</w>
      <c> </c>
      <w xml:id="erpa-1273060">пробуждаешься</w>
      <pc xml:id="erpa-1273070">,</pc>
      <c> </c>
      <w xml:id="erpa-1273080">о</w>
      <c> </c>
      <w xml:id="erpa-1273090">Байя</w>
      <c> </c>
      <pc xml:id="erpa-1273100" unit="sentence">...</pc>
   </head>
   <lg xml:id="erpa-s10050">
      <l xml:id="erpa-l68435">
         <w xml:id="erpa-1273130">Ты</w>
         <c> </c>
         <w xml:id="erpa-1273140">пробуждаешься</w>
         <pc xml:id="erpa-1273150">,</pc>
         <c> </c>
         <w xml:id="erpa-1273160">о</w>
         <c> </c>
         <w xml:id="erpa-1273170">Байя</w>
         <pc xml:id="erpa-1273180">,</pc>
         <c> </c>
         <w xml:id="erpa-1273190">из</w>
         <c> </c>
         <w xml:id="erpa-1273200">гробницы</w>
      </l>
      <l xml:id="erpa-l68440">
         <w xml:id="erpa-1273210">При</w>
         <c> </c>
         <w xml:id="erpa-1273220">появлении</w>
         <c> </c>
         <w xml:id="erpa-1273230">Аврориных</w>
         <c> </c>
         <w xml:id="erpa-1273240">лучей</w>
         <pc xml:id="erpa-1273250">,</pc>
      </l>
      <l xml:id="erpa-l68445">
         <w xml:id="erpa-1273260">Но</w>
         <c> </c>
         <w xml:id="erpa-1273270">не</w>
         <c> </c>
         <w xml:id="erpa-1273280">отдаст</w>
         <c> </c>
         <w xml:id="erpa-1273290">тебе</w>
         <c> </c>
         <w xml:id="erpa-1273300">багряная</w>
         <c> </c>
         <w xml:id="erpa-1273310">денница</w>
      </l>
      <l rendition="#h_6" xml:id="erpa-l68450">
         <w xml:id="erpa-1273320">‎</w>
         <c> </c>
         <w xml:id="erpa-1273330">Сияния</w>
         <c> </c>
         <w xml:id="erpa-1273340">протекших</w>
         <c> </c>
         <w xml:id="erpa-1273350">дней</w>
         <pc xml:id="erpa-1273360">,</pc>
      </l>
      <l rendition="#h_3" xml:id="erpa-l68455">
         <w xml:id="erpa-1273370">‎</w>
         <c> </c>
         <w xml:id="erpa-1273380">Не</w>
         <c> </c>
         <w xml:id="erpa-1273390">возвратит</w>
         <c> </c>
         <w xml:id="erpa-1273400">убежищей</w>
         <c> </c>
         <w xml:id="erpa-1273410">прохлады</w>
         <pc xml:id="erpa-1273420">,</pc>
      </l>
      <l rendition="#h_6" xml:id="erpa-l68460">
         <w xml:id="erpa-1273430">‎</w>
         <c> </c>
         <w xml:id="erpa-1273440">Где</w>
         <c> </c>
         <w xml:id="erpa-1273450">нежились</w>
         <c> </c>
         <w xml:id="erpa-1273460">рои</w>
         <c> </c>
         <w xml:id="erpa-1273470">красот</w>
         <pc xml:id="erpa-1273480">,</pc>
      </l>
      <l xml:id="erpa-l68465">
         <w xml:id="erpa-1273490">И</w>
         <c> </c>
         <w xml:id="erpa-1273500">никогда</w>
         <c> </c>
         <w xml:id="erpa-1273510">твои</w>
         <c> </c>
         <w xml:id="erpa-1273520">порфирны</w>
         <c> </c>
         <w xml:id="erpa-1273530">колоннады</w>
      </l>
      <l rendition="#h_6" xml:id="erpa-l68470">
         <w xml:id="erpa-1273540">‎</w>
         <c> </c>
         <w xml:id="erpa-1273550">Со</w>
         <c> </c>
         <w xml:id="erpa-1273560">дна</w>
         <c> </c>
         <w xml:id="erpa-1273570">не</w>
         <c> </c>
         <w xml:id="erpa-1273580">встанут</w>
         <c> </c>
         <w xml:id="erpa-1273590">синих</w>
         <c> </c>
         <w xml:id="erpa-1273600">вод</w>
         <pc xml:id="erpa-1273610" unit="sentence">.</pc>
      </l>
