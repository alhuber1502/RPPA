   <note type="source" xml:id="erpa-n01425">
      <date type="publ" when="1818">
         <w xml:id="erpa-1259760">1818</w>
      </date>
   </note>
   <head type="main" xml:lang="rus" xml:id="erpa-h01880">
      <w xml:id="erpa-1258330">Песня</w>
   </head>
   <lg xml:id="erpa-s09980">
      <l xml:id="erpa-l67515">
         <w xml:id="erpa-1258360">Минувших</w>
         <c> </c>
         <w xml:id="erpa-1258370">дней</w>
         <c> </c>
         <w xml:id="erpa-1258380">очарованье</w>
         <pc xml:id="erpa-1258390">,</pc>
      </l>
      <l xml:id="erpa-l67520">
         <w xml:id="erpa-1258400">Зачем</w>
         <c> </c>
         <w xml:id="erpa-1258410">опять</w>
         <c> </c>
         <w xml:id="erpa-1258420">воскресло</w>
         <c> </c>
         <w xml:id="erpa-1258430">ты</w>
         <pc xml:id="erpa-1258440" unit="sentence">?</pc>
      </l>
      <l xml:id="erpa-l67525">
         <w xml:id="erpa-1258450">Кто</w>
         <c> </c>
         <w xml:id="erpa-1258460">разбудил</w>
         <c> </c>
         <w xml:id="erpa-1258470">воспоминанье</w>
      </l>
      <l xml:id="erpa-l67530">
         <w xml:id="erpa-1258480">И</w>
         <c> </c>
         <w xml:id="erpa-1258490">замолчавшие</w>
         <c> </c>
         <w xml:id="erpa-1258500">мечты</w>
         <pc xml:id="erpa-1258510" unit="sentence">?</pc>
      </l>
      <l xml:id="erpa-l67535">
         <w xml:id="erpa-1258520">Шепнул</w>
         <c> </c>
         <w xml:id="erpa-1258530">душе</w>
         <c> </c>
         <w xml:id="erpa-1258540">привет</w>
         <c> </c>
         <w xml:id="erpa-1258550">бывалый</w>
         <pc xml:id="erpa-1258560">;</pc>
      </l>
      <l xml:id="erpa-l67540">
         <w xml:id="erpa-1258570">Душе</w>
         <c> </c>
         <w xml:id="erpa-1258580">блеснул</w>
         <c> </c>
         <w xml:id="erpa-1258590">знакомый</w>
         <c> </c>
         <w xml:id="erpa-1258600">взор</w>
         <pc xml:id="erpa-1258610">;</pc>
      </l>
      <l xml:id="erpa-l67545">
         <w xml:id="erpa-1258620">И</w>
         <c> </c>
         <w xml:id="erpa-1258630">зримо</w>
         <c> </c>
         <w xml:id="erpa-1258640">ей</w>
         <c> </c>
         <w xml:id="erpa-1258650">в</w>
         <c> </c>
         <w xml:id="erpa-1258660">минуту</w>
         <c> </c>
         <w xml:id="erpa-1258670">стало</w>
      </l>
      <l xml:id="erpa-l67550">
         <w xml:id="erpa-1258680">Незримое</w>
         <c> </c>
         <w xml:id="erpa-1258690">с</w>
         <c> </c>
         <w xml:id="erpa-1258700">давнишних</w>
         <c> </c>
         <w xml:id="erpa-1258710">пор</w>
         <pc xml:id="erpa-1258720" unit="sentence">.</pc>
      </l>
   </lg>
   <lg xml:id="erpa-s09985">
      <l xml:id="erpa-l67555">
         <w xml:id="erpa-1258750">О</w>
         <c> </c>
         <w xml:id="erpa-1258760">милый</w>
         <c> </c>
         <w xml:id="erpa-1258770">гость</w>
         <pc xml:id="erpa-1258780">,</pc>
         <c> </c>
         <w xml:id="erpa-1258790">святое</w>
         <c> </c>
         <w xml:id="erpa-1258800">Прежде</w>
         <pc xml:id="erpa-1258810">,</pc>
      </l>
      <l xml:id="erpa-l67560">
         <w xml:id="erpa-1258820">Зачем</w>
         <c> </c>
         <w xml:id="erpa-1258830">в</w>
         <c> </c>
         <w xml:id="erpa-1258840">мою</w>
         <c> </c>
         <w xml:id="erpa-1258850">теснишься</w>
         <c> </c>
         <w xml:id="erpa-1258860">грудь</w>
         <pc xml:id="erpa-1258870" unit="sentence">?</pc>
      </l>
      <l xml:id="erpa-l67565">
         <w xml:id="erpa-1258880">Могу</w>
         <c> </c>
         <w xml:id="erpa-1258890">ль</w>
         <c> </c>
         <w xml:id="erpa-1258900">сказать</w>
         <pc xml:id="erpa-1258910">:</pc>
         <c> </c>
         <w xml:id="erpa-1258920">живи</w>
         <c> </c>
         <w xml:id="erpa-1258930">надежде</w>
         <pc xml:id="erpa-1258940" unit="sentence">?</pc>
      </l>
      <l xml:id="erpa-l67570">
         <w xml:id="erpa-1258950">Скажу</w>
         <c> </c>
         <w xml:id="erpa-1258960">ль</w>
         <c> </c>
         <w xml:id="erpa-1258970">тому</w>
         <pc xml:id="erpa-1258980">,</pc>
         <c> </c>
         <w xml:id="erpa-1258990">что</w>
         <c> </c>
         <w xml:id="erpa-1259000">было</w>
         <pc xml:id="erpa-1259010">:</pc>
         <c> </c>
         <w xml:id="erpa-1259020">будь</w>
         <pc xml:id="erpa-1259030" unit="sentence">?</pc>
      </l>
      <l xml:id="erpa-l67575">
         <w xml:id="erpa-1259040">Могу</w>
         <c> </c>
         <w xml:id="erpa-1259050">ль</w>
         <c> </c>
         <w xml:id="erpa-1259060">узреть</w>
         <c> </c>
         <w xml:id="erpa-1259070">во</w>
         <c> </c>
         <w xml:id="erpa-1259080">блеске</w>
         <c> </c>
         <w xml:id="erpa-1259090">новом</w>
      </l>
      <l xml:id="erpa-l67580">
         <w xml:id="erpa-1259100">Мечты</w>
         <c> </c>
         <w xml:id="erpa-1259110">увядшей</w>
         <c> </c>
         <w xml:id="erpa-1259120">красоту</w>
         <pc xml:id="erpa-1259130" unit="sentence">?</pc>
      </l>
      <l xml:id="erpa-l67585">
         <w xml:id="erpa-1259140">Могу</w>
         <c> </c>
         <w xml:id="erpa-1259150">ль</w>
         <c> </c>
         <w xml:id="erpa-1259160">опять</w>
         <c> </c>
         <w xml:id="erpa-1259170">одеть</w>
         <c> </c>
         <w xml:id="erpa-1259180">покровом</w>
      </l>
      <l xml:id="erpa-l67590">
         <w xml:id="erpa-1259190">Знакомой</w>
         <c> </c>
         <w xml:id="erpa-1259200">жизни</w>
         <c> </c>
         <w xml:id="erpa-1259210">наготу</w>
         <pc xml:id="erpa-1259220" unit="sentence">?</pc>
      </l>
   </lg>
   <lg xml:id="erpa-s09990">
      <l xml:id="erpa-l67595">
         <w xml:id="erpa-1259250">Зачем</w>
         <c> </c>
         <w xml:id="erpa-1259260">душа</w>
         <c> </c>
         <w xml:id="erpa-1259270">в</w>
         <c> </c>
         <w xml:id="erpa-1259280">тот</w>
         <c> </c>
         <w xml:id="erpa-1259290">край</w>
         <c> </c>
         <w xml:id="erpa-1259300">стремится</w>
         <pc xml:id="erpa-1259310">,</pc>
      </l>
      <l xml:id="erpa-l67600">
         <w xml:id="erpa-1259320">Где</w>
         <c> </c>
         <w xml:id="erpa-1259330">были</w>
         <c> </c>
         <w xml:id="erpa-1259340">дни</w>
         <pc xml:id="erpa-1259350">,</pc>
         <c> </c>
         <w xml:id="erpa-1259360">каких</w>
         <c> </c>
         <w xml:id="erpa-1259370">уж</w>
         <c> </c>
         <w xml:id="erpa-1259380">нет</w>
         <pc xml:id="erpa-1259390" unit="sentence">?</pc>
      </l>
      <l xml:id="erpa-l67605">
         <w xml:id="erpa-1259400">Пустынный</w>
         <c> </c>
         <w xml:id="erpa-1259410">край</w>
         <c> </c>
         <w xml:id="erpa-1259420">не</w>
         <c> </c>
         <w xml:id="erpa-1259430">населится</w>
         <pc xml:id="erpa-1259440">,</pc>
      </l>
      <l xml:id="erpa-l67610">
         <w xml:id="erpa-1259450">Не</w>
         <c> </c>
         <w xml:id="erpa-1259460">узрит</w>
         <c> </c>
         <w xml:id="erpa-1259470">он</w>
         <c> </c>
         <w xml:id="erpa-1259480">минувших</w>
         <c> </c>
         <w xml:id="erpa-1259490">лет</w>
         <pc xml:id="erpa-1259500">;</pc>
      </l>
      <l xml:id="erpa-l67615">
         <w xml:id="erpa-1259510">Там</w>
         <c> </c>
         <w xml:id="erpa-1259520">есть</w>
         <c> </c>
         <w xml:id="erpa-1259530">один</w>
         <c> </c>
         <w xml:id="erpa-1259540">жилец</w>
         <c> </c>
         <w xml:id="erpa-1259550">безгласный</w>
         <pc xml:id="erpa-1259560">,</pc>
      </l>
      <l xml:id="erpa-l67620">
         <w xml:id="erpa-1259570">Свидетель</w>
         <c> </c>
         <w xml:id="erpa-1259580">милой</w>
         <c> </c>
         <w xml:id="erpa-1259590">старины</w>
         <pc xml:id="erpa-1259600">;</pc>
      </l>
      <l xml:id="erpa-l67625">
         <w xml:id="erpa-1259610">Там</w>
         <c> </c>
         <w xml:id="erpa-1259620">вместе</w>
         <c> </c>
         <w xml:id="erpa-1259630">с</w>
         <c> </c>
         <w xml:id="erpa-1259640">ним</w>
         <c> </c>
         <w xml:id="erpa-1259650">все</w>
         <c> </c>
         <w xml:id="erpa-1259660">дни</w>
         <c> </c>
         <w xml:id="erpa-1259670">прекрасны</w>
      </l>
      <l xml:id="erpa-l67630">
         <w xml:id="erpa-1259680">В</w>
         <c> </c>
         <w xml:id="erpa-1259690">единый</w>
         <c> </c>
         <w xml:id="erpa-1259700">гроб</w>
         <c> </c>
         <w xml:id="erpa-1259710">положены</w>
         <pc xml:id="erpa-1259720" unit="sentence">.</pc>
      </l>
   </lg>
