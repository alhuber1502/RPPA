   <note type="source" xml:id="erpa-n01570">
      <date type="publ" when="1826">
         <w xml:id="erpa-1391100">1826</w>
      </date>
   </note>
   <head type="main" xml:lang="rus" xml:id="erpa-h02025">
      <w xml:id="erpa-1390020">Поэт</w>
   </head>
   <lg xml:id="erpa-s11025">
      <l xml:id="erpa-l76155">
         <w xml:id="erpa-1390050">‎</w>
         <c> </c>
         <w xml:id="erpa-1390060">Пока</w>
         <c> </c>
         <w xml:id="erpa-1390070">не</w>
         <c> </c>
         <w xml:id="erpa-1390080">требует</w>
         <c> </c>
         <w xml:id="erpa-1390090">поэта</w>
      </l>
      <l xml:id="erpa-l76160">
         <w xml:id="erpa-1390100">К</w>
         <c> </c>
         <w xml:id="erpa-1390110">священной</w>
         <c> </c>
         <w xml:id="erpa-1390120">жертве</w>
         <c> </c>
         <w xml:id="erpa-1390130">Аполлон</w>
         <pc xml:id="erpa-1390140">,</pc>
      </l>
      <l xml:id="erpa-l76165">
         <w xml:id="erpa-1390150">В</w>
         <c> </c>
         <w xml:id="erpa-1390160">заботах</w>
         <c> </c>
         <w xml:id="erpa-1390170">су́етного</w>
         <c> </c>
         <w xml:id="erpa-1390180">света</w>
      </l>
      <l xml:id="erpa-l76170">
         <w xml:id="erpa-1390190">Он</w>
         <c> </c>
         <w xml:id="erpa-1390200">малодушно</w>
         <c> </c>
         <w xml:id="erpa-1390210">погружён</w>
         <pc xml:id="erpa-1390220">;</pc>
      </l>
      <l xml:id="erpa-l76175">
         <w xml:id="erpa-1390230">Молчит</w>
         <c> </c>
         <w xml:id="erpa-1390240">его</w>
         <c> </c>
         <w xml:id="erpa-1390250">святая</w>
         <c> </c>
         <w xml:id="erpa-1390260">лира</w>
         <pc xml:id="erpa-1390270">;</pc>
      </l>
      <l xml:id="erpa-l76180">
         <w xml:id="erpa-1390280">Душа</w>
         <c> </c>
         <w xml:id="erpa-1390290">вкушает</w>
         <c> </c>
         <w xml:id="erpa-1390300">хладный</w>
         <c> </c>
         <w xml:id="erpa-1390310">сон</w>
         <pc xml:id="erpa-1390320">,</pc>
      </l>
      <l xml:id="erpa-l76185">
         <w xml:id="erpa-1390330">И</w>
         <c> </c>
         <w xml:id="erpa-1390340">меж</w>
         <c> </c>
         <w xml:id="erpa-1390350">детей</w>
         <c> </c>
         <w xml:id="erpa-1390360">ничтожных</w>
         <c> </c>
         <w xml:id="erpa-1390370">мира</w>
         <pc xml:id="erpa-1390380">,</pc>
      </l>
      <l xml:id="erpa-l76190">
         <w xml:id="erpa-1390390">Быть</w>
         <c> </c>
         <w xml:id="erpa-1390400">может</w>
         <pc xml:id="erpa-1390410">,</pc>
         <c> </c>
         <w xml:id="erpa-1390420">всех</w>
         <c> </c>
         <w xml:id="erpa-1390430">ничтожней</w>
         <c> </c>
         <w xml:id="erpa-1390440">он</w>
         <pc xml:id="erpa-1390450" unit="sentence">.</pc>
      </l>
   </lg>
   <lg xml:id="erpa-s11030">
      <l xml:id="erpa-l76195">
         <w xml:id="erpa-1390480">‎</w>
         <c> </c>
         <w xml:id="erpa-1390490">Но</w>
         <c> </c>
         <w xml:id="erpa-1390500">лишь</w>
         <c> </c>
         <w xml:id="erpa-1390510">Божественный</w>
         <c> </c>
         <w xml:id="erpa-1390520">глагол</w>
      </l>
      <l xml:id="erpa-l76200">
         <w xml:id="erpa-1390530">До</w>
         <c> </c>
         <w xml:id="erpa-1390540">слуха</w>
         <c> </c>
         <w xml:id="erpa-1390550">чуткого</w>
         <c> </c>
         <w xml:id="erpa-1390560">коснётся</w>
         <pc xml:id="erpa-1390570">,</pc>
      </l>
      <l xml:id="erpa-l76205">
         <w xml:id="erpa-1390580">Душа</w>
         <c> </c>
         <w xml:id="erpa-1390590">поэта</w>
         <c> </c>
         <w xml:id="erpa-1390600">встрепенётся</w>
         <pc xml:id="erpa-1390610">,</pc>
      </l>
      <l xml:id="erpa-l76210">
         <w xml:id="erpa-1390620">Как</w>
         <c> </c>
         <w xml:id="erpa-1390630">пробудившийся</w>
         <c> </c>
         <w xml:id="erpa-1390640">орёл</w>
         <pc xml:id="erpa-1390650" unit="sentence">.</pc>
      </l>
      <l xml:id="erpa-l76215">
         <w xml:id="erpa-1390660">Тоскует</w>
         <c> </c>
         <w xml:id="erpa-1390670">он</w>
         <c> </c>
         <w xml:id="erpa-1390680">в</w>
         <c> </c>
         <w xml:id="erpa-1390690">забавах</w>
         <c> </c>
         <w xml:id="erpa-1390700">мира</w>
         <pc xml:id="erpa-1390710">,</pc>
      </l>
      <l xml:id="erpa-l76220">
         <w xml:id="erpa-1390720">Людской</w>
         <c> </c>
         <w xml:id="erpa-1390730">чуждается</w>
         <c> </c>
         <w xml:id="erpa-1390740">молвы</w>
         <pc xml:id="erpa-1390750">,</pc>
      </l>
      <l xml:id="erpa-l76225">
         <w xml:id="erpa-1390760">К</w>
         <c> </c>
         <w xml:id="erpa-1390770">ногам</w>
         <c> </c>
         <w xml:id="erpa-1390780">народного</w>
         <c> </c>
         <w xml:id="erpa-1390790">кумира</w>
      </l>
      <l xml:id="erpa-l76230">
         <w xml:id="erpa-1390800">Не</w>
         <c> </c>
         <w xml:id="erpa-1390810">кло́нит</w>
         <c> </c>
         <w xml:id="erpa-1390820">гордой</w>
         <c> </c>
         <w xml:id="erpa-1390830">головы</w>
         <pc xml:id="erpa-1390840">;</pc>
      </l>
      <l xml:id="erpa-l76235">
         <w xml:id="erpa-1390850">Бежит</w>
         <c> </c>
         <w xml:id="erpa-1390860">он</w>
         <pc xml:id="erpa-1390870">,</pc>
         <c> </c>
         <w xml:id="erpa-1390880">дикий</w>
         <c> </c>
         <w xml:id="erpa-1390890">и</w>
         <c> </c>
         <w xml:id="erpa-1390900">суровый</w>
         <pc xml:id="erpa-1390910">,</pc>
      </l>
      <l xml:id="erpa-l76240">
         <w xml:id="erpa-1390920">И</w>
         <c> </c>
         <w xml:id="erpa-1390930">звуков</w>
         <c> </c>
         <w xml:id="erpa-1390940">и</w>
         <c> </c>
         <w xml:id="erpa-1390950">смятенья</w>
         <c> </c>
         <w xml:id="erpa-1390960">полн</w>
         <pc xml:id="erpa-1390970">,</pc>
      </l>
      <l xml:id="erpa-l76245">
         <w xml:id="erpa-1390980">На</w>
         <c> </c>
         <w xml:id="erpa-1390990">берега</w>
         <c> </c>
         <w xml:id="erpa-1391000">пустынных</w>
         <c> </c>
         <w xml:id="erpa-1391010">волн</w>
         <pc xml:id="erpa-1391020">,</pc>
      </l>
      <l xml:id="erpa-l76250">
         <w xml:id="erpa-1391030">В</w>
         <c> </c>
         <w xml:id="erpa-1391040">широкошумные</w>
         <c> </c>
         <w xml:id="erpa-1391050">дубровы</w>
         <c> </c>
         <pc xml:id="erpa-1391060">…</pc>
      </l>
   </lg>
</div>
